extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Review #{locationHeader.name}
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/clocation", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating") Rating
          .col-xs-12.col-sm-2
            select#raiting.form-control.input-sm(name="rating")
              - for (var i = 5; i >= 1; i--)
                option= i              
        .form-group
          label.col-sm-2.control-label(for="review") Review
          .col-sm-10
            textarea#review.form-control(name="review", row="5")
        button.btn.btn-default.pull-right Add my review
      .col-xs-12.col.md-4
